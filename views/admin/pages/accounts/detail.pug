extends ../../layouts/default.pug

block main
  if (role.permissions.includes("accounts_view"))
    if (account.fullName)
      h1(class="mb-4") #{account.fullName}
    if(account.role)
      p(class="mb-4") Quyền:  #{account.role.title}
    if (account.email)
      p(class="mb-4") Email:  #{account.email}
    if (account.phone)
      p(class="mb-4") Phone:  #{account.phone}
    if (account.status)
      div(class="mb-4")
        span Trạng thái:  
        if (account.status === "active")
          span(class="badge badge-success") Hoạt động
        else
          span(class="badge badge-danger") Dừng hoạt động

    a(
      href=`${prefixAdmin}/accounts/edit/${account.id}`
      class="btn btn-warning"
    ) Chỉnh sửa
