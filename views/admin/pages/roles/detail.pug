extends ../../layouts/default.pug

block main
  if (role.title)
    h1(class="mb-4") #{role.title}

  if (role.description)
    div(class="mb-4") !{role.description}

  if (rolePermissions)
    ol
      each val, key in rolePermissions 
        li #{key} 
          ul 
            each item, index in val 
              li #{val[index]}

  a(
    href=`${prefixAdmin}/roles/edit/${role.id}`
    class="btn btn-warning"
  ) Chỉnh sửa